# Telegram API Credentials (Required)
# Get these from https://my.telegram.org/apps
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Optional: Session string for faster login
# Leave empty to use file-based session
SESSION_STRING=

# Analysis Settings
MESSAGE_LIMIT=1000
MEMBER_LIMIT=5000
GET_MEMBERS=true
INCLUDE_BOTS=true

# File Paths
RESULTS_DIR=./results
USERS_DIR=./users
LOGS_DIR=./logs
LINKS_FILE=./links.txt
OUTPUT_FILE=my_chats.json

# Analysis Options
SAVE_MESSAGE_TEXT=true
ANALYZE_MEDIA=true
TRACK_REACTIONS=true
TRACK_FORWARDS=true
DEEP_SCAN=true

# Performance Settings
MESSAGE_BATCH_SIZE=100
MEMBER_BATCH_SIZE=200
DELAY_BETWEEN_BATCHES=1

# MongoDB Settings (if using database)
MONGO_URI=mongodb://admin:password@localhost:27017/telegram_scanner 